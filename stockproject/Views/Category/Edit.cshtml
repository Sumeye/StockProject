                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form action="Edit" method="post" enctype="multipart/form-data" class="form-horizontal form-label-left" novalidate="">
                        @Html.HiddenFor(model=>model.CategoryId)
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                Kategori Adı <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control col-md-7 col-xs-12" })
                            </div>

                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Açıklama
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model=>model.Description,  new          { @class="form-control col-md-7 col-xs-12"})
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                @*@Html.ActionLink("Geri Dön","List", new { @class = "btn btn-success" })*@ 
                                <a href="/Category/List" type="submit" class="btn btn-success">Geri Dön</a>
                                <button id="Edit" value="Edit" type="submit" class="btn btn-success">Güncelle</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>


</div>

