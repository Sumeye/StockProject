
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutPage.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Kategori Ekleme</h2>
            </div>
            <div class="x_content">
                <form action="Create" method="post" enctype="multipart/form-data" class="form-horizontal form-label-left" novalidate="">
                 
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Kategori Adı <span class="required">*</span>
                        </label>
                        <label style="text-align:left;"> @ViewBag.Mesaj</label>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="CategoryName" required="required" type="text">
                        </div>
                       
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            Açıklama
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="2" name="Description" type="text">
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                   
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Temizle</button>
                                <button id="Create" value="Create" type="submit" class="btn btn-success">Ekle</button>
                            </div>
                        </div>
                  
                    </form>
                  
                </div>
            </div>
        </div>
    </div>
