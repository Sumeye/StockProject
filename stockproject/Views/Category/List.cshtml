@model List<stockproject.Models.Category>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<!-- sağ bloktaki herşey bu kısma gelecek-->
<!-- ve her satır satır çalışmamızda önce <div clas="row"> kullancaz-->
<div class="right_col">

    
        
   
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <h2>  <a href="Create" class="btn btn-primary">Yeni Kategori Ekle</a></h2>
                <div class="x_title">
                    <h2>Kategoriler<small>Kategorileri Listele</small></h2>
                    @*<ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>*@
                    <div class="clearfix"></div>
                </div>
                <div class="x_content" style="display: block;">
                    <table class="table">
                        <thead>
                            <tr>
                                @*<th>#</th>*@
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    @*<th scope="row"></th>*@
                                    <td>@item.CategoryName</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a class="fa fa-pencil btn btn-success" href="/Category/Edit/@item.CategoryId">
                                            @*<img src="~/Content/images/edit.png" />*@
                                        </a>
                                    </td>

                                    <td><a href="/Category/Delete/@item.CategoryId" onclick="return confirm('Dikkat: Bu kaydı silmek istediğinizden emin misiniz?')" class="fa fa-eraser btn btn-danger "></a>
                                    </td>

                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>



<div class="right_col">

</div>


